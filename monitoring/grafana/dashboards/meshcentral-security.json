  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "tags": [
    "traefik",
    "crowdsec",
    "meshcentral"
  ],
  "templating": {
    "list": [
      {
        "hide": 2,
        "name": "DS_PROMETHEUS",
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      },
      {
        "hide": 2,
        "name": "DS_LOKI",
        "query": "loki",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  },
  "time": {
    "from": "now-3h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "browser",
