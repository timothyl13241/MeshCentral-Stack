          "values": true
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "topk(10, sum by (RequestPath) (count_over_time({job=\"traefik-access\"} | json | __error__=\"\" [$__range])))",
          "legendFormat": "{{RequestPath}}",
          "refId": "A",
          "queryType": "instant"
        }
      ]
    },
    {
      "id": 10,
      "title": "Top Requesting Browsers",
      "type": "bargauge",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 20
      },
      "datasource": {
        "type": "loki",
        "uid": "${DS_LOKI}"
      },
      "description": "Top 10 User-Agent strings by request count within the selected timeframe.",
      "options": {
        "orientation": "horizontal",
        "displayMode": "basic",
        "showUnfilled": true,
        "valueMode": "color",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
